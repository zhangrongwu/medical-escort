/* 空状态统一样式 */
.empty-container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -60%);
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.empty-image {
  width: 320rpx;
  height: 320rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  line-height: 1.6;
}

.empty-subtext {
  font-size: 24rpx;
  color: #CCCCCC;
  text-align: center;
  margin-top: 16rpx;
}

/* 加载状态统一样式 */
.loading-container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 24rpx;
  border: 4rpx solid #F5F7FA;
  border-top-color: #1890FF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
} 