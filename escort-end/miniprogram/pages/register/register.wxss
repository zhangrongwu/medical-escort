.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 120rpx;
}

/* 表单标题 */
.form-header {
  text-align: center;
  padding: 60rpx 0;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  opacity: 0.8;
}

/* 表单分组 */
.form-group {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.group-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 24rpx;
}

.group-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  border-radius: 4rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

/* 头像上传 */
.avatar-upload {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
}

.avatar-upload:active {
  transform: scale(0.95);
  background: #f0f0f0;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 4rpx 0;
}

/* 输入框 */
.input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 44rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

/* 单选框组 */
.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}

.radio radio {
  margin-right: 8rpx;
}

/* 选择器 */
.picker {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 44rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

/* 多选框组 */
.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.checkbox {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  background: #f8f9fa;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  transition: all 0.3s;
}

.checkbox:active {
  transform: scale(0.95);
  background: #f0f0f0;
}

.checkbox checkbox {
  margin-right: 8rpx;
  transform: scale(0.8);
}

/* 文本域 */
.textarea {
  width: 100%;
  height: 240rpx;
  background: #f8f9fa;
  border-radius: 24rpx;
  padding: 24rpx 30rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 图片上传 */
.upload-box {
  width: 100%;
  height: 360rpx;
  background: #f8f9fa;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.upload-box image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon-plus {
  font-size: 80rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.upload-tip {
  font-size: 28rpx;
  color: #999;
}

/* 提交按钮 */
.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.2);
  transition: all 0.3s;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(24, 144, 255, 0.1);
}

/* 禁用状态 */
.input[disabled] {
  background: #f5f5f5;
  color: #999;
}

.picker[disabled] {
  background: #f5f5f5;
  color: #999;
}

/* 错误提示 */
.error-tip {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
  padding-left: 30rpx;
}

/* 必填标记 */
.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 4rpx;
}

.get-phone-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #f8f9fa;
  border-radius: 44rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border: none;
}

.get-phone-btn::after {
  display: none;
}

.get-phone-btn .icon {
  margin-right: 12rpx;
  font-size: 32rpx;
  color: #1890ff;
}

.get-phone-btn:active {
  background: #f0f0f0;
}

.service-types {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-tag {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.type-tag.selected {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
  font-weight: 500;
}

.type-tag:active {
  transform: scale(0.95);
} 