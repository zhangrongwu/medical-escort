.container {
  min-height: 100vh;
  background: #F6F8FC;
  padding: 30rpx;
}

/* 表单样式 */
.form-group {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #F5F7FA;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666666;
}

.current-phone {
  font-size: 28rpx;
  color: #333333;
}

.input {
  flex: 1;
  height: 88rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 验证码区域 */
.verify {
  position: relative;
}

.verify-btn {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #1890FF;
  background: none;
  border: 2rpx solid #1890FF;
  border-radius: 30rpx;
}

.verify-btn::after {
  display: none;
}

.verify-btn.disabled {
  color: #999999;
  border-color: #CCCCCC;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1890FF 0%, #3CA9FF 100%);
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.2);
  transition: all 0.3s ease;
}

.submit-btn.disabled {
  background: #CCCCCC;
  box-shadow: none;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(24, 144, 255, 0.1);
} 