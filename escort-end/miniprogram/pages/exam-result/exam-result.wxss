.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 结果卡片 */
.result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.result-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.result-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  display: block;
}

.score-box {
  margin-bottom: 30rpx;
}

.score {
  font-size: 120rpx;
  font-weight: bold;
  line-height: 1;
}

.score.pass {
  color: #52c41a;
  text-shadow: 0 4rpx 8rpx rgba(82, 196, 26, 0.2);
}

.score.fail {
  color: #ff4d4f;
  text-shadow: 0 4rpx 8rpx rgba(255, 77, 79, 0.2);
}

.unit {
  font-size: 36rpx;
  color: #999;
  margin-left: 12rpx;
}

.tip {
  font-size: 28rpx;
  color: #666;
}

/* 证书卡片 */
.certificate-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status {
  font-size: 26rpx;
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

.card-content {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.cert-icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.cert-info {
  flex: 1;
}

.cert-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.cert-date, .cert-no {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.view-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 底部按钮 */
.bottom-btns {
  display: flex;
  gap: 30rpx;
}

.retry-btn, .back-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  text-align: center;
  transition: all 0.3s;
}

.retry-btn {
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  color: #fff;
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.2);
}

.back-btn {
  background: #f5f5f5;
  color: #666;
}

.retry-btn:active, .back-btn:active {
  transform: scale(0.98);
} 