.container {
  min-height: 100vh;
  padding: 40rpx;
  background: linear-gradient(135deg, #f6f8fc 0%, #ffffff 100%);
}

.result-box {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  animation: fadeInDown 0.8s ease;
}

.status-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #52c41a;
  margin-bottom: 20rpx;
  display: block;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  display: block;
}

.info-list {
  text-align: left;
  margin-bottom: 60rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}

.btn-group {
  display: flex;
  gap: 30rpx;
}

.primary-btn, .outline-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.primary-btn {
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  color: #fff;
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.2);
}

.outline-btn {
  background: #fff;
  color: #1890ff;
  border: 2rpx solid rgba(24, 144, 255, 0.3);
}

.primary-btn:active, .outline-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.tips-box {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  padding: 30rpx;
  animation: fadeInUp 0.8s ease;
}

.tips-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.tips-title .icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 