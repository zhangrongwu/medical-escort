.container {
  padding-bottom: 120rpx;
}

.hospital-header {
  position: relative;
  height: 400rpx;
}

.hospital-image {
  width: 100%;
  height: 100%;
}

.hospital-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0));
  color: #fff;
}

.hospital-info .name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.hospital-info .level {
  font-size: 26rpx;
  background: rgba(18, 150, 219, 0.8);
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  margin-bottom: 10rpx;
  display: inline-block;
}

.address {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}

.section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #1296db;
}

.introduction {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.department-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.department-item {
  width: calc(50% - 10rpx);
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.department-item .count {
  font-size: 24rpx;
  color: #999;
}

.escort-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.escort-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.escort-item .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.escort-info {
  flex: 1;
}

.escort-info .name {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.rating {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.rating .score {
  font-size: 26rpx;
  color: #ff4d4f;
  margin-right: 20rpx;
}

.rating .orders {
  font-size: 24rpx;
  color: #999;
}

.experience {
  font-size: 24rpx;
  color: #666;
}

.price {
  text-align: right;
}

.price .amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.price .unit {
  font-size: 24rpx;
  color: #999;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
}

.contact-btn, .book-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.contact-btn {
  background: #f8f8f8;
  color: #333;
} 