.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 180rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(120deg, #1890ff, #36cfc9);
  padding: 60rpx 40rpx;
  margin-bottom: 30rpx;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(24, 144, 255, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.info {
  margin-left: 40rpx;
  color: #fff;
}

.nickname {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.phone, .bind-phone, .login-tip {
  font-size: 28rpx;
  opacity: 0.9;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
  backdrop-filter: blur(10px);
}

/* 订单统计卡片 */
.stats-card {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 0;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  text-align: center;
}

.stats-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -50%;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 60%;
  background: #f0f0f0;
}

.count {
  font-size: 44rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 12rpx;
  line-height: 1;
}

.label {
  font-size: 26rpx;
  color: #666;
  line-height: 1;
}

/* 功能菜单 */
.menu-list {
  margin: 30rpx;
}

.menu-group {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 36rpx;
  position: relative;
  transition: all 0.3s;
}

.menu-item:active {
  background: #f8f9fa;
}

.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 36rpx;
  right: 36rpx;
  bottom: 0;
  height: 1rpx;
  background: #f5f5f5;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.menu-icon image {
  width: 100%;
  height: 100%;
}

.menu-title {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.icon-arrow {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.3;
}

.logout .menu-title {
  color: #ff4d4f;
}

/* 客服按钮 */
.service-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  background: #fff;
  border-radius: 50rpx;
  padding: 24rpx 36rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  z-index: 100;
}

.service-btn:active {
  transform: scale(0.95);
}

.service-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.service-btn text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
} 