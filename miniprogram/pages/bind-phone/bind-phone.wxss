.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f6f8fc 0%, #ffffff 100%);
}

/* 标题区域 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
  animation: fadeInDown 0.8s ease;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  opacity: 0.8;
}

/* 表单区域 */
.form-group {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  animation: fadeInUp 0.8s ease;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.input-box {
  flex: 1;
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 44rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.phone-input, .code-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
}

.send-code-btn {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  border-radius: 44rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s;
}

.send-code-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(24, 144, 255, 0.2);
}

.send-code-btn.disabled {
  background: #f5f5f5;
  color: #999;
  box-shadow: none;
}

/* 快捷登录按钮 */
.quick-login {
  margin-bottom: 60rpx;
  animation: fadeIn 1s ease;
}

.wx-phone-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #07c160, #0ab356);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
}

.wx-phone-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(7, 193, 96, 0.2);
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s;
  animation: fadeInUp 1.2s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(24, 144, 255, 0.2);
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 